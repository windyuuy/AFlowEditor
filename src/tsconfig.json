{
	"compilerOptions": {
		// "strictNullChecks": true,
		"outFile": "../dist/flods/flods.js",
		// "outDir": "../dist/",
		"module": "None",
		"allowUmdGlobalAccess": true,
		"moduleResolution": "Node",
